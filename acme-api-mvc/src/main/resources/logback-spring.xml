<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include resource="org/springframework/boot/logging/logback/defaults.xml"/>

	<property name="LOG_DIR" value="${LOG_DIR:-logs}"/>
	<property name="LOG_FILE" value="${LOG_FILE:-acme-api-mvc}"/>

	<!-- Console Appender -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<!-- Rolling File Appender - Daily -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/${LOG_FILE}.log</file>
		<encoder>
			<pattern>${FILE_LOG_PATTERN}</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_DIR}/${LOG_FILE}-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<!-- Root Logger -->
	<root level="INFO">
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="FILE"/>
	</root>

	<!-- Application Loggers -->
	<logger name="org.acme" level="DEBUG"/>

	<!-- Spring Security - only log authentication/authorization events, not matcher checks -->
	<logger name="org.springframework.security" level="INFO"/>
	<logger name="org.springframework.security.authentication" level="DEBUG"/>
	<logger name="org.springframework.security.authorization" level="DEBUG"/>
	<logger name="org.springframework.security.web" level="INFO"/>

	<!-- Reduce noise from other loggers -->
	<logger name="org.springframework.web" level="INFO"/>
	<logger name="org.springframework.boot" level="INFO"/>
</configuration>

